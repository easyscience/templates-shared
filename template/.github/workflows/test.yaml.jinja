# This is the main workflow for testing the code before and after
# packaging it.
# The workflow is divided into three jobs:
# 1. env-prepare:
#    - Prepare the environment for testing
# 2. source-test:
#    - Test the code base against the latest code in the repository
#    - Create the Python package
#    - Upload the Python package for the next job
# 3. package-test:
#    - Download the Python package (including extra files) from the previous job
#    - Install the downloaded Python package
#    - Test the code base against the installed package
# 4. dashboard-build-trigger:
#    - Trigger the dashboard build workflow to update the code quality
#      metrics on the dashboard

name: Code and package tests

on:
  # Trigger the workflow on push
  push:
    # Every branch
    branches: ['**']
    # But do not run this workflow on creating a new tag starting with
    # 'v', e.g. 'v1.0.3' (see publish-pypi.yml)
    tags-ignore: ['v*']
  # Trigger the workflow on pull request
  pull_request:
    branches: ['**']
  # Allows you to run this workflow manually from the Actions tab
  workflow_dispatch:

# Need permissions to trigger the dashboard build workflow
permissions:
  actions: write
  contents: read

# Allow only one concurrent workflow, skipping runs queued between the run
# in-progress and latest queued. And cancel in-progress runs.
concurrency:
  group:
    ${% raw %}{{ github.workflow }}{% endraw %}-${% raw %}{{ github.event.pull_request.number || github.ref }}{% endraw %}
  cancel-in-progress: true

# Set the environment variables to be used in all jobs defined in this workflow
env:
  CI_BRANCH: ${% raw %}{{ github.head_ref || github.ref_name }}{% endraw %}
  PY_VERSIONS: '{{ lib_python_min }} {{ lib_python_max }}'
  PIXI_ENVS: "py-{{ lib_python_min | replace('.', '') }}-env py-{{ lib_python_max | replace('.', '') }}-env"

jobs:
  # Job 1: Set up pytest marks
  pytest-mark-setup:
    runs-on: [ubuntu-latest]

    outputs:
      pytest-marks: ${% raw %}{{ steps.set-mark.outputs.pytest_marks }}{% endraw %}

    steps:
      # Determine if integration tests should be run fully or only the fast ones
      # (to save time on branches other than master and develop)
      - name: Set mark for integration tests
        id: set-mark
        run: |
          if [[ "${% raw %}{{ env.CI_BRANCH }}{% endraw %}" == "master" || "${% raw %}{{ env.CI_BRANCH }}{% endraw %}" == "develop" ]]; then
            echo "pytest_marks=" >> $GITHUB_OUTPUT
          else
            echo "pytest_marks=-m fast" >> $GITHUB_OUTPUT
          fi

  # Job 2: Test code
  source-test:
    needs: pytest-mark-setup # depend on previous job

    strategy:
      fail-fast: false
      matrix:
        os: [ubuntu-24.04, macos-14, windows-2022]

    runs-on: ${% raw %}{{ matrix.os }}{% endraw %}

    steps:
      - name: Checkout repository
        uses: actions/checkout@v5

      - name: Set up pixi
        uses: ./.github/actions/setup-pixi
        with:
          environments: ${% raw %}{{ env.PIXI_ENVS }}{% endraw %}

      - name: Run unit tests
        shell: bash
        run: |
          for py_ver in $PY_VERSIONS; do
            env="py-$(echo $py_ver | tr -d .)-env" # Converts 3.11 -> py-311-env
            echo "ğŸ”¹ğŸ”¸ğŸ”¹ğŸ”¸ğŸ”¹ Python: $py_ver (env: $env) ğŸ”¹ğŸ”¸ğŸ”¹ğŸ”¸ğŸ”¹"
            pixi run --environment $env unit-tests
          done

      - name:
          Run integration tests ${% raw %}{{ needs.env-prepare.outputs.pytest-marks }}{% endraw %}
        shell: bash
        run: |
          for py_ver in $PY_VERSIONS; do
            env="py-$(echo $py_ver | tr -d .)-env" # Converts 3.11 -> py-311-env
            echo "ğŸ”¹ğŸ”¸ğŸ”¹ğŸ”¸ğŸ”¹ Python: $py_ver (env: $env) ğŸ”¹ğŸ”¸ğŸ”¹ğŸ”¸ğŸ”¹"
            pixi run --environment $env integration-tests ${% raw %}{{ needs.env-prepare.outputs.pytest-marks }}{% endraw %}
          done

      # Delete all local tags when not on a tagged commit to force versioningit
      # to fall back to the configured default-tag, which is '999.0.0' in our case.
      # This is needed for testing the package in the next job, as its version
      # must be higher than the PyPI version for pip to prefer the local version.
      - name: Force using versioningit default tag (non tagged release)
        if: startsWith(github.ref , 'refs/tags/v') != true
        run: git tag --delete $(git tag)

      - name: Create Python package
        shell: bash
        run: |
          for py_ver in $PY_VERSIONS; do
            env="py-$(echo $py_ver | tr -d .)-env" # Converts 3.11 -> py-311-env
            echo "ğŸ”¹ğŸ”¸ğŸ”¹ğŸ”¸ğŸ”¹ Python: $py_ver (env: $env) ğŸ”¹ğŸ”¸ğŸ”¹ğŸ”¸ğŸ”¹"
            pixi run --environment $env dist-build
            echo "Moving built wheel to dist/$env/"
            pixi run mkdir -p dist/$env
            pixi run mv dist/*.whl dist/$env/
          done

      #- name: Remove local easydiffraction from pixi.toml
      #  shell: bash
      #  run: pixi remove --pypi easydiffraction

      - name: Remove Python cache files before uploading
        shell: bash
        run: pixi run clean-pycache

      # More than one file/dir need to be specified in 'path', to preserve the
      # structure of the dist/ directory, not only its contents.
      - name: Upload package (incl. extras) for next job
        uses: actions/upload-artifact@v4
        with:
          name: {{ project_name | lower }}_${% raw %}{{ matrix.os }}{% endraw %}_${% raw %}{{ runner.arch }}{% endraw %}
          path: |
            .github/
            dist/
            tests/
            pytest.ini
          #  pixi.toml
          #  pixi.lock
          include-hidden-files: true
          if-no-files-found: error
          compression-level: 0

  # Job 3: Test the package
  package-test:
    needs: source-test # depend on previous job

    strategy:
      fail-fast: false
      matrix:
        os: [ubuntu-24.04, macos-14, windows-2022]

    runs-on: ${% raw %}{{ matrix.os }}{% endraw %}

    steps:
      - name:
          Download package (incl. extras) from previous job
        uses: actions/download-artifact@v4
        with: # name or path are taken from the upload step of the previous job
          name: {{ project_name | lower }}_${% raw %}{{ matrix.os }}{% endraw %}_${% raw %}{{ runner.arch }}{% endraw %}
          path: . # directory to extract downloaded zipped artifacts

      - name: Set up pixi
        uses: ./.github/actions/setup-pixi
        with:
          environments: ''
          activate-environment: ''
          run-install: false
          frozen: false

      #- name: Set up pixi
      #  uses: prefix-dev/setup-pixi@v0.9.3
      #  with:
      #    environments: ${% raw %}{{ env.PIXI_ENVS }}{% endraw %}
      #    run-install: true
      #    frozen: true
      #    cache: false
      #    post-cleanup: false

      #- name: Install and setup development dependencies
      #  shell: bash
      #  run: |
      #    for env in ${% raw %}{{ env.PIXI_ENVS }}{% endraw %}; do
      #      echo "ğŸ”¹ğŸ”¸ğŸ”¹ğŸ”¸ğŸ”¹  Current env: $env  ğŸ”¹ğŸ”¸ğŸ”¹ğŸ”¸ğŸ”¹"
      #      pixi run --environment $env wheel
      #    done

      - name: Install {{ lib_package_name }} from the built wheel
        shell: bash
        run: |
          for py_ver in $PY_VERSIONS; do
            env="py-$(echo $py_ver | tr -d .)-env" # Converts 3.11 -> py-311-env
            echo "ğŸ”¹ğŸ”¸ğŸ”¹ğŸ”¸ğŸ”¹ Python: $py_ver (env: $env) ğŸ”¹ğŸ”¸ğŸ”¹ğŸ”¸ğŸ”¹"
            pixi init {{ lib_package_name }}
            cd {{ lib_package_name }}
            pixi add python=$py_ver
            pixi add gsl
            echo "Looking for wheel in dist/$env/"
            whl_path="$(find ../dist/$env -name '*.whl' | head -1)"
            echo "Installing {{ lib_package_name }} from: $whl_path"
            pixi add --pypi '{{ lib_package_name }} @ ${whl_path}'
          done

      - name: Run unit tests
        shell: bash
        run: |
          for py_ver in $PY_VERSIONS; do
            env="py-$(echo $py_ver | tr -d .)-env" # Converts 3.11 -> py-311-env
            echo "ğŸ”¹ğŸ”¸ğŸ”¹ğŸ”¸ğŸ”¹ Python: $py_ver (env: $env) ğŸ”¹ğŸ”¸ğŸ”¹ğŸ”¸ğŸ”¹"
            pixi run --environment $env python -m pytest ../tests/unit/ --color=yes -v
          done

      - name:
          Run integration tests ${% raw %}{{ needs.env-prepare.outputs.pytest-marks }}{% endraw %}
        shell: bash
        run: |
          for py_ver in $PY_VERSIONS; do
            env="py-$(echo $py_ver | tr -d .)-env" # Converts 3.11 -> py-311-env
            echo "ğŸ”¹ğŸ”¸ğŸ”¹ğŸ”¸ğŸ”¹ Python: $py_ver (env: $env) ğŸ”¹ğŸ”¸ğŸ”¹ğŸ”¸ğŸ”¹"
            pixi run --environment $env python -m pytest ../tests/integration/ --color=yes -n auto -v ${% raw %}{{ needs.env-prepare.outputs.pytest-marks }}{% endraw %}
          done

